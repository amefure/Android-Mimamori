<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ex_foundation"
    android:clickable="true"
    tools:context=".View.Setting.ConfirmMimamoriIdFragment">

    <include
        android:id="@+id/include_header"
        layout="@layout/layout_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/onboarding3_mimamori_msg"
            android:padding="10dp"
            android:background="@drawable/thema_msg_shape"
            android:textColor="@color/ex_text"
            android:textStyle="bold"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"/>


        <TextView
            android:id="@+id/miamori_id_label"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:text="取得できませんでした"
            android:padding="10dp"
            android:background="@drawable/thema_msg_shape"
            android:gravity="center_vertical"
            android:textSize="16dp"
            android:textColor="@color/ex_text"
            android:textStyle="bold"/>

        <Space
            android:layout_width="match_parent"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <Button
                android:id="@+id/copy_button"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/thema_button_shape"
                android:foregroundTint="@color/white"
                android:text="@string/onboarding3_mimamori_copy"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:backgroundTint="@null" />

            <Space
                android:layout_width="10dp"
                android:layout_height="match_parent"/>


            <Button
                android:id="@+id/share_button"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:background="@drawable/thema_button_shape"
                android:foregroundTint="@color/white"
                android:text="@string/onboarding3_mimamori_share"
                android:textColor="@color/white"
                android:textStyle="bold"
                app:backgroundTint="@null" />

        </LinearLayout>

        <Space
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1" />


    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>